<% include('../layouts/header.ejs') %>

<style>
  form {
    display: flex;
    flex-direction: column;
    max-width: 400px;
    margin: 20px auto;
    padding: 15px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  form input[type="file"],
  form input[type="hidden"],
  form input[type="text"],
  form input[type="email"],
  form input[type="submit"] {
    margin: 10px 0;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  form input[type="submit"] {
    background-color: #4CAF50;
    color: white;
    cursor: pointer;
    border: none;
  }

  form input[type="submit"]:hover {
    background-color: #45a049;
  }

  img {
    display: block;
    max-width: 150px;
    height: auto;
    margin: 20px auto;
    border-radius: 50%;
    border: 2px solid #ccc;
  }
</style>

<img src="userImages/<%= user.image %>" alt="<%= user.image %>">

<form action="" method="post" enctype="multipart/form-data">

  <input type="file" name="image">
  <input type="hidden" name="user_id" value="<%= user._id %>">
  <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required>
  <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required>
  <input type="text" name="mno" value="<%= user.mobile %>" placeholder="Enter Mobile" required>
  <input type="submit" value="Update Profile">

</form>

<% include('../layouts/footer.ejs') %>
